<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data>
        <!-- Add medecin field to existing view -->
        <record model="ir.ui.view" id="partner_medecin_form_view">
            <field name="name">partner.patient</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="city" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                 <field name="category_id" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
               <field name='parent_id' position="attributes">
                <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <field name='street2' position="attributes">
                <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <field name="website" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <field name="function" position="attributes">
                    <attribute name="invisible">{'invisible': [('is_company', '=', True)]}</attribute>
                </field>
                <notebook position="inside">
                    <page string="Rendezvous">
                        <group>
                            <field name="patient"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>